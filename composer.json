{
    "name": "flaviojr/slim-boilerplate",
    "type": "project",
    "description": "Boilerplate for slim applications",
    "require": {
        "slim/slim": "^3.11",
        "doctrine/orm": "^2.6",
        "vlucas/phpdotenv": "^2.5",
        "ramsey/uuid-doctrine": "^1.5",
        "gedmo/doctrine-extensions": "^2.4",
        "fzaninotto/faker": "^1.8",
        "monolog/monolog": "^1.23"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3"
    },
    "autoload": {
        "psr-4": {
            "Common\\": "src/Common/",
            "Support\\": "src/Support/",
            "Tests\\": "tests"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    }
}
